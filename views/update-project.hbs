<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../public/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- BOX-ICON -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <!-- GOOGLE-FONT -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <title>Update Project</title>
  </head>
  <body>
    <!-- NAV BARR -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container d-flex">
          <a class="navbar-brand" href="/">
              <img src="../public/assets/logo.png" alt="" width="50px">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" style="width: 70%">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex">
              <li class="nav-item">
                <a class="nav-link ps-md-5 pe-5 " aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                {{#if isLogin}}
                  <a class="nav-link" href="/add-project">Add Project</a>
                {{/if}}
              </li>
            </ul>
            <div class="d-md-flex justify-content-around align-items-center" style="width: 30%">
              <div class="d-md-flex">
                 {{#if isLogin}}
                  <a class="nav-link text-dark fw-bold" href="/" style="padding-left: 0;">Hello, {{user.name}}</a>
                  <a class="nav-link text-secondary" href="/logout" style="padding-left: 0;">Logout</a>
                {{else}}
                <a class="nav-link text-secondary" href="/register" style="padding-left: 0;">Register</a>
                <a class="nav-link text-secondary " href="/login" style="padding-left: 0;">Login</a>
              </div>
              {{/if}}
              <a href="/contact">
                <button class="btn btn-dark btn-outline-light shadow ps-4 pe-4" type="submit" style="border-radius: 20px">Contact</button>
              </a>
            </div>
          </div>
        </div>
      </nav>

      <!-- FORM PROJECT -->
      <div class="bg-container d-flex" style="height: 94vh;">
        <form action="/update-project/{{id}}" method="POST" enctype="multipart/form-data" class="container m-auto fw-bold" style="width: 450px;">
            <h2 class="text-center fw-bold mb-5">UPDATE MY PROJECT</h2>
            <div class="mb-3">
                <label for="title" class="form-label">Project Name</label>
                <input type="text" class="form-control" id="title" name="title" value="{{update.title}}">
            </div>
            <div class="row">
                <div class="col">
                    <label for="sDate">Start Date</label>
                    <input type="date" class="form-control" id="sDate" name="sDate" value="{{update.startDate}}">
                </div>
                <div class="col">
                    <label for="eDate">End Date</label>
                    <input type="date" class="form-control" id="eDate" name="eDate" value="{{update.endDate}}">
                </div>
            </div>
            <div class="form-floating mt-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 200px" name="description">{{update.description}}</textarea>
                <label for="floatingTextarea2">Description</label>
            </div>
             <div>
                <label for="" class="mt-3">Technologies</label>
                <div class="d-flex text-secondary fw-bold font-monospace">
                    <div class="col mt-2">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="nodejs" id="node" name="technode" {{#if update.technode}} checked {{/if}}>
                            <label class="form-check-label" for="node">
                              Node Js
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="react" id="react" name="techreact" {{#if update.techreact}} checked {{/if}}>
                            <label class="form-check-label" for="react">
                              React Js
                            </label>
                          </div>
                    </div>
                    <div class="col mt-2">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" value="javascript" id="js" name="techjs" {{#if update.techjs}} checked {{/if}}>
                            <label class="form-check-label" for="js">
                              JavaScript
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="vuejs" id="vuejs" name="techvue" {{#if update.techvue}} checked {{/if}}>
                            <label class="form-check-label" for="vuejs">
                              Vue Js
                            </label>
                          </div>
                    </div>
                </div>
            </div>
            <div>
                <label for="img" class="mt-3 mb-2">Upload Image</label>
                <div class="input-group">
                    <input style="position: relative;" type="file" class="form-control" id="img" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="image" value="{{update.image}}">
                    <i class='bx bx-paperclip' ></i>
                </div>
            </div>
            <button class="btn btn-dark btn-outline-light shadow ps-4 pe-4 mt-5" type="submit" style="border-radius: 20px; float: right;">Submit</button>
        </form>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>